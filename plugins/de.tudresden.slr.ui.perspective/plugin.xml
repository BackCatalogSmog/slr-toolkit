<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.tudresden.slr.ui.perspective.PerspectiveFactory"
            id="de.tudresden.slr.ui.perspective.perspective"
            name="Systematic Literature Review">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.tudresden.slr.ui.perspective.perspective">
         <view
               closeable="true"
               id="de.tudresden.slr.model.bibtex.ui.presentation.BibtexEntryView"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               id="de.tudresden.slr.model.taxonomy.ui.views.TaxonomyCheckboxListView"
               minimized="false"
               ratio="0.75"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.ProblemView"
               minimized="false"
               ratio="0.65"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
         <view
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               relationship="stack"
               relative="de.tudresden.slr.model.bibtex.ui.presentation.BibtexEntryView">
         </view>
         <view
               id="chart.view.chartview"
               minimized="false"
               ratio="0.65"
               relationship="bottom"
               relative="de.tudresden.slr.model.taxonomy.ui.views.TaxonomyCheckboxListView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
