// assert initial state
with [get-view "Project Explorer" | get-tree] {
    select newProject | double-click
    select "newProject/my_taxonomy.taxonomy" | double-click
}
with [get-editor "my_taxonomy.taxonomy" | get-text-viewer] {
    get-property className | equals "org.eclipse.swt.custom.StyledText" | verify-true
    get-property text | equals "/* This taxonomy was created by the new taxonomy wizard\n"
        + "   It holds a simple taxonomy to showcase the syntax */\n\n"
        + "Dimension 1 {\n"
        + "\tTerm 1 {\n"
        + "\t\tSubterm 1,\n"
        + "\t\tSubterm 2\n"
        + "\t},\n"
        + "\tTerm 2,\n"
        + "\tTerm 3\n"
        + "},\n\n"
        + "Dimension 2 {\n"
        + "\tTerm 1 {\n"
        + "\t\tSubterm 1,\n"
        + "\t\tSubterm 2\n"
        + "\t},\n"
        + "\tTerm 2,\n"
        + "\tTerm 3\n"
        + "}" | verify-true
}
with [get-view Taxonomy | get-tree] {
    get-property "getClassName()" | equals "org.eclipse.swt.widgets.Tree" | verify-true
    get-property "getItemCount()" | equals 2 | verify-true
}
// manipulate dsl editor
with [get-editor "my_taxonomy.taxonomy" | get-text-viewer] {
    set-caret-pos 20 2
    type-text ","
    key-type Enter -times 2
    type-text "Dimension 3 "
    key-type "M1+M3+7" "{"
    key-type Enter
}
get-menu -path "File/Save" | click
// assert changes are reflected in both editor and tree view
with [get-editor "my_taxonomy.taxonomy" | get-text-viewer] {
    get-property className | equals "org.eclipse.swt.custom.StyledText" | verify-true
    get-property text | equals "/* This taxonomy was created by the new taxonomy wizard\n"
        + "   It holds a simple taxonomy to showcase the syntax */\n\n"
        + "Dimension 1 {\n"
        + "\tTerm 1 {\n"
        + "\t\tSubterm 1,\n"
        + "\t\tSubterm 2\n"
        + "\t},\n"
        + "\tTerm 2,\n"
        + "\tTerm 3\n"
        + "},\n\n"
        + "Dimension 2 {\n"
        + "\tTerm 1 {\n"
        + "\t\tSubterm 1,\n"
        + "\t\tSubterm 2\n"
        + "\t},\n"
        + "\tTerm 2,\n"
        + "\tTerm 3\n"
        + "},\n\n"
        + "Dimension 3 {\n"
        + "\t\n"
        + "}" | verify-true
}
with [get-view Taxonomy | get-tree] {
    get-property "getClassName()" | equals "org.eclipse.swt.widgets.Tree" | verify-true
    get-property "getItemCount()" | equals 3 | verify-true
}
// vice versa
get-view Taxonomy | get-tree | select "Dimension 3 (0)" | get-menu -path "New Term" | click
with [get-window -class CreateTermDialog] {
    get-list | select "As Neighbor of: Dimension 3"
    get-editbox -after [get-label "Term Name:"] | set-text "Dimension 4"
    get-button OK | click
}
with [get-view Taxonomy | get-tree] {
    get-property "getClassName()" | equals "org.eclipse.swt.widgets.Tree" | verify-true
    get-property "getItemCount()" | equals 4 | verify-true
}
with [get-editor "my_taxonomy.taxonomy" | get-text-viewer] {
    get-property className | equals "org.eclipse.swt.custom.StyledText" | verify-true
    get-property text | equals "/* This taxonomy was created by the new taxonomy wizard\n"
        + "   It holds a simple taxonomy to showcase the syntax */ Dimension 1 {\n"
        + "\tTerm 1 {\n"
        + "\t\tSubterm 1,\n"
        + "\t\tSubterm 2\n"
        + "\t},\n"
        + "\tTerm 2,\n"
        + "\tTerm 3\n"
        + "},\n"
        + "Dimension 2 {\n"
        + "\tTerm 1 {\n"
        + "\t\tSubterm 1,\n"
        + "\t\tSubterm 2\n"
        + "\t},\n"
        + "\tTerm 2,\n"
        + "\tTerm 3\n"
        + "},\n"
        + "Dimension 3 {\n"
        + "},\n"
        + "Dimension 4" | verify-true
}
